height = ask("enter a number") as number

while (height less than 0) or (height greater than or equal to 24)
	print("enter a positive integer less than 24")
	height = ask("enter a number") as number
end

for row in 1...height
	print(" " * (height - row))

	print("#" * row)

	print("  ")

	print("#" * row)

	print()

end